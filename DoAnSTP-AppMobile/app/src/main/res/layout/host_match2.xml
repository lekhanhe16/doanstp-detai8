<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="10dp"
    android:layout_marginTop="8dp"
    card_view:cardPreventCornerOverlap="false"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent_hostmatch2"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ban tao tran dau "
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_thoigian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoi gian"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_content2" />

        <TextView
            android:id="@+id/item_diadiem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia diem"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_thoigian2" />

        <ImageView
            android:id="@+id/item_agree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/item_expand_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/item_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dang cho duyet"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/item_expand_layout"
            app:layout_constraintEnd_toStartOf="@+id/item_agree2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_expand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_diadiem2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
