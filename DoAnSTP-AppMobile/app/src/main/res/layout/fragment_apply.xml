<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyTeamFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/txt1"
        android:layout_marginLeft="16dp"
        android:text="Ban chua tham gia doi bong nao!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/txt2"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/btn_create_team"

        android:layout_height="wrap_content"
        android:text="hoac Dang ky tham gia ngay!" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginLeft="16dp"
        android:id="@+id/btn_create_team"
        android:layout_marginTop="8dp"

        android:text="Tao doi bong"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt2"
        android:id="@+id/recycler_list_apply"/>
</RelativeLayout>